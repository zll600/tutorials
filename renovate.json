{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>RightCapitalHQ/renovate-config",
    ":automergeDigest"
  ],
  "ignorePaths": [
    "lessons/247/**",
    "lessons/129/**",
    "lessons/152/**",
    "lessons/218/**",
    "lessons/158/**",
    "lessons/159/**",
    "lessons/202/**",
    "lessons/144/**",
    "lessons/198/**",
    "lessons/160/**",
    "lessons/151/**"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["lint", "prettier"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
